<!doctype html>
<html lang="en">
<head>
	<title>Sign In â€¢ Library Management System</title>
	<%- include('./partials/head.ejs') %>
	<link rel="stylesheet" href="/stylesheets/base.css">
	<link rel="stylesheet" href="/stylesheets/login.css">
</head>
<body>
	<%- include('./partials/navbar.ejs', { user: user }) %>
	<main class="container py-5 mt-5">
		<section class="auth-card" id="login-form">
			<h1>Sign in</h1>
			<% if (user) { %>
				<p class="help">You are currently signed in as <strong><%= user.username || user.Username %></strong>.</p>
				<form action="/logout" method="post" class="mb-3">
					<button class="auth-btn" type="submit">Sign out</button>
				</form>
			<% } %>
			<form action="/login/password" method="post">
				<section>
					<label for="username">Username</label>
					<input id="username" name="username" type="text" autocomplete="username" required autofocus>
				</section>
				<section>
					<label for="current-password">Password</label>
					<input id="current-password" name="password" type="password" autocomplete="current-password" required>
				</section>
				<button class="auth-btn" type="submit">Sign in</button>
			</form>
			<hr>
			<p class="help">Don't have an account? <a href="/signup">Create one</a></p>
		</section>
	</main>
</body>
</html>
